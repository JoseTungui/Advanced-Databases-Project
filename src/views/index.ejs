<% include partials/_header %>

    <div class="container ml-4">
        <div class="row">
            <!-- FORM -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add method="POST">
                            <div class="form-group">
                                <input type="number" name="artistid" placeholder="Inserta un Artist_ID" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="lastname" placeholder="Inserta un Lastname" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="firstname" placeholder="Inserta un Firstname" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="nationality" placeholder="Inserta un Nationality" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="dateofbirth" placeholder="Inserta una Fecha de nacimiento" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="datedeceased" placeholder="Inserta una Fecha de fallecimiento" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="works" cols="80" class="form-control" placeholder="Inserta los Trabajos"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Artist_ID</th>
                            <th>Lastname</th>
                            <th>Firstname</th>
                            <th>Nationality</th>
                            <th>Birth</th>
                            <th>Deceased</th>
                            <th>Works</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < artists.length; i++) { %>
                            <tr>
                                <td><%= artists[i].artistid %></td>
                                <td><%= artists[i].lastname %></td>
                                <td><%= artists[i].firstname %></td>
                                <td><%= artists[i].nationality %></td>
                                <td><%= artists[i].dateofbirth %></td>
                                <td><%= artists[i].datedeceased %></td>
                                <% var wrks = [] %>
                                <% for(var j = 0; j < artists[i].works.length; j++) { %>
                                    <% wrks.push(artists[i].works[j].workid); %>
                                <% } %>
                                <td><%= wrks.join('\n') %></td>
                                <td>
                                    <a href="/delete/<%= artists[i]._id %>" class="btn btn-danger">Delete</a>
                                    <a href="/edit/<%= artists[i]._id %>" class="btn btn-info">Edit</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>    
            </div>
        </div>
    </div>

<% include partials/_footer %>