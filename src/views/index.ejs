<% include partials/_header %>

<div class="container ml-4">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="number" name="artistid" placeholder="Inserta un Artist_ID"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastname" placeholder="Inserta un Lastname" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="firstname" placeholder="Inserta un Firstname" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nationality" placeholder="Inserta un Nationality"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="dateofbirth" placeholder="Inserta una Fecha de nacimiento"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="datedeceased" placeholder="Inserta una Fecha de fallecimiento"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="works" cols="80" class="form-control"
                                placeholder="Inserta los Trabajos"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Add
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- LIST -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover table-light">
                <thead>
                    <tr>
                        <th>Artist_ID</th>
                        <th>Lastname</th>
                        <th>Firstname</th>
                        <th>Nationality</th>
                        <th>Birth</th>
                        <th>Deceased</th>
                        <th>Works</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < artists.length; i++) { %>
                    <tr>
                        <td><%= artists[i].artistid %></td>
                        <td><%= artists[i].lastname %></td>
                        <td><%= artists[i].firstname %></td>
                        <td><%= artists[i].nationality %></td>
                        <td><%= artists[i].dateofbirth %></td>
                        <td><%= artists[i].datedeceased %></td>

                        <td>
                            <% for(var j = 0; j < artists[i].works.length; j++) { %>

                            <p><a href="#popup"><%= artists[i].works[j].workid %></a></p>

                            <div id="popup" class="overlay">
                                <div id="popupBody">
                                    <h2>Work ID <%= artists[i].works[j].workid %></h2>
                                    <a id="cerrar" href="#">&times;</a>
                                    <div class="popupContent">
                                        <p>Work ID: <%= artists[i].works[j].workid %></p>
                                        <p>Title: <%= artists[i].works[j].title %></p>
                                        <p>Copy: <%= artists[i].works[j].copy %></p>
                                        <p>Medium: <%= artists[i].works[j].medium %></p>
                                        <p>Description: <%= artists[i].works[j].description %></p>
                                        <p>Trans Id: <%= artists[i].works[j].transids %></p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </td>
                        <td>
                            <a href="/delete/<%= artists[i]._id %>" class="btn btn-danger">Delete</a>
                            <a href="/edit/<%= artists[i]._id %>" class="btn btn-info">Edit</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include partials/_footer %>