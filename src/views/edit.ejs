<% include partials/_header %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= artist._id %>" method="POST">
                        <div class="form-group">
                            <input type="number" name="artistid" placeholder="Inserta un Artist_ID" class="form-control"
                                value="<%= artist.artistid %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastname" placeholder="Inserta un Lastname" class="form-control"
                                value="<%= artist.lastname %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="firstname" placeholder="Inserta un Firstname" class="form-control"
                                value="<%= artist.firstname %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nationality" placeholder="Inserta un Nationality"
                                class="form-control" value="<%= artist.nationality %>">
                        </div>
                        <div class="form-group">
                            <input type="number" name="dateofbirth" placeholder="Inserta una Fecha de nacimiento"
                                class="form-control" value="<%= artist.dateofbirth %>">
                        </div>
                        <div class="form-group">
                            <input type="number" name="datedeceased" placeholder="Inserta una Fecha de fallecimiento"
                                class="form-control" value="<%= artist.datedeceased %>">
                        </div>
                        <div class="form-group">
                            <textarea name="works" cols="80" class="form-control"
                                placeholder="Inserta los trabajos"><%= artist.works %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Update
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>